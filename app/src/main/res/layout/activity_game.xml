<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/displayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/AddSexuateCellButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/black"
        android:text="Add Sexuate Cell \n- 10 Food" />

    <Button
        android:id="@+id/AddAsexuateCellButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/AddSexuateCellButton"
        android:layout_alignTop="@id/AddSexuateCellButton"
        android:layout_toEndOf="@id/AddSexuateCellButton"
        android:layout_marginStart="81dp"
        android:backgroundTint="@color/black"
        android:text="Add Asexuate Cell \n- 10 Food" />
</RelativeLayout>